CREATE DATABASE electric_shop;
CREATE TABLE emails (emailId int(11) NOT NULL PRIMARY KEY AUTO_INCREMENT,email varchar(250),subject varchar(250),message varchar(250));
CREATE TABLE customers (customerId int(11) NOT NULL PRIMARY KEY AUTO_INCREMENT,customerName varchar(250),email varchar(250),pass varchar(250),phone varchar(250),address varchar(250),role varchar(200));
CREATE TABLE products (productId int(11) NOT NULL PRIMARY KEY AUTO_INCREMENT,productName varchar(250),title varchar(250),price int(5),descraption varchar(250),image varchar(250),productDate varchar(200),productLeft varchar(250),author varchar(250));
CREATE TABLE carts (cartId int(11) NOT NULL PRIMARY KEY AUTO_INCREMENT,product varchar(250),price int(5),quatity int(5),cartStatus varchar(250),userId int(11) ,CONSTRAINT carts_emails FOREIGN KEY(userId) REFERENCES emails(emailId) ON UPDATE CASCADE ON DELETE CASCADE,productId int(11),CONSTRAINT carts_products FOREIGN KEY (productId) REFERENCES products(productId) ON UPDATE CASCADE ON DELETE CASCADE);
CREATE TABLE repairs (repairId int(11) NOT NULL PRIMARY KEY AUTO_INCREMENT,catogary varchar(250),damageType varchar(250),uuid varchar(250),advancedAmt varchar(250),due varchar(250),repairStatus varchar(250),bookedDate date,returnDate date,userId int(11) ,CONSTRAINT repairs_emails FOREIGN KEY(userId) REFERENCES emails(emailId) ON UPDATE CASCADE ON DELETE CASCADE,productId int(11),CONSTRAINT repairs_products FOREIGN KEY (productId) REFERENCES products(productId) ON UPDATE CASCADE ON DELETE CASCADE);
CREATE TABLE servicesStatus (serviceId int(11) NOT NULL PRIMARY KEY AUTO_INCREMENT,discount int(5),status varchar(250),uuid varchar(250),userId int(11) ,CONSTRAINT servicesStatus_emails FOREIGN KEY(userId) REFERENCES emails(emailId) ON UPDATE CASCADE ON DELETE CASCADE,productId int(11),CONSTRAINT servicesStatus_products FOREIGN KEY (productId) REFERENCES products(productId) ON UPDATE CASCADE ON DELETE CASCADE);
CREATE TABLE settings (settingId int(11) NOT NULL PRIMARY KEY AUTO_INCREMENT,websiteName varchar(250),websiteLogo varchar(250),websitFooter varchar(250));
CREATE TABLE soldProducts (soldId int(11) NOT NULL PRIMARY KEY AUTO_INCREMENT,quatity int(5),price int(5),soldDate Date,soldStatus varchar(250),userId int(11) ,CONSTRAINT soldProducts_emails FOREIGN KEY(userId) REFERENCES emails(emailId) ON UPDATE CASCADE ON DELETE CASCADE,productId int(11),CONSTRAINT soldProducts_products FOREIGN KEY (productId) REFERENCES products(productId) ON UPDATE CASCADE ON DELETE CASCADE);
